<h1>Listing word_counts</h1>

<table>
  <tr>
    <th>Word</th>
    <th>Category</th>
    <th>Count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @word_counts.each do |word_count| %>
  <tr>
    <td><%= word_count.word %></td>
    <td><%= word_count.category %></td>
    <td><%= word_count.count %></td>
    <td><%= link_to 'Show', word_count %></td>
    <td><%= link_to 'Edit', edit_word_count_path(word_count) %></td>
    <td><%= link_to 'Destroy', word_count, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

